<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Routine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">@color/green_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_500</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/green_500</item>
    </style>

    <style name="Routine.Switch" parent="">
        <!-- Switch Color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_300</item>
        <item name="thumbTint">@color/white</item>
        <item name="colorSecondary">@color/green_500</item>
    </style>

    <style name="Routine.DayPicker" parent="">
        <item name="fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="Routine.Scrollbar" parent="">
        <item name="android:scrollbarThumbVertical">@drawable/square_rounded</item>
    </style>

    <style name="FirstSetup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_500</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/green_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_500</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/green_500</item>
    </style>

    <style name="imageBorderRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
</resources>